import requests
import json
from datetime import date, timedelta

datum1 = str(date.today() - timedelta(days=2))
datum2 = str(date.today() - timedelta(days=1))

url = "https://api.covid19api.com/country/slovenia/status/confirmed/live?from="+datum1+"&to="+datum2
response = requests.get(url)
json = json.loads(response.text)

okuzenih = str(json[1]["Cases"] - json[0]["Cases"])

dateIzpis = date.today() - timedelta(days=1)
print(dateIzpis.strftime("%d.%m.%Y") + " je blo " + okuzenih + " oku≈æenih.")
